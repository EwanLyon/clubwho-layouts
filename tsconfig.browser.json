{
	"compilerOptions": {
		"jsx": "react",
		"strict": true,
		// "noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"target": "ES2022",
		"lib": ["ES2022", "dom"],
		"esModuleInterop": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"module": "ES2022",
		"baseUrl": "./src/",
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"src/types/**/*.d.ts",
		"node_modules/@nodecg/types/augment-window.d.ts"
	]
}
